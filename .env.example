# 浏览器配置
BROWSER=chromium
HEADLESS=false
DEFAULT_TIMEOUT=10
DEBUG_MODE=true
DEVTOOLS_ENABLED=true
SLOW_MO=500

# 目标系统基础 URL (请在你的本地 .env 文件或运行环境中设置实际值)
# 例如: http://test.myapp.com 或 https://prod.myapp.com
WEB_BASE_URL=
API_BASE_URL=

# 通用用户凭据 (根据测试系统调整角色和变量名)
TEST_DEFAULT_USERNAME=
TEST_DEFAULT_PASSWORD=
TEST_ADMIN_USERNAME=
TEST_ADMIN_PASSWORD=

# 生产环境凭据 (如果需要在本地模拟生产用户)
PROD_DEFAULT_USERNAME=
PROD_DEFAULT_PASSWORD=
PROD_ADMIN_USERNAME=
PROD_ADMIN_PASSWORD=

# 邮件配置 (可选, 请在你的本地 .env 文件或运行环境中设置实际值)
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.example.com # 示例 SMTP 服务器
EMAIL_SMTP_PORT=465
EMAIL_SENDER=sender@example.com # 示例发件人邮箱
EMAIL_PASSWORD=
EMAIL_USE_SSL=true

# POP3配置 (可选)
EMAIL_POP3_SERVER=pop.example.com # 示例 POP3 服务器
EMAIL_POP3_PORT=995
EMAIL_POP3_USE_SSL=true

# 收件人设置 (可选, 如需添加多个收件人，用逗号分隔)
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com # 示例收件人邮箱

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# 特定功能配置 (例如验证码, 根据需要设置)
# TEST_CAPTCHA_VALUE=