# ================================
# 1. General Environment
# ================================
# 指定运行环境 (test 或 prod)
APP_ENV=

# ================================
# 2. Browser Configuration
# ================================
BROWSER=               # 例如: chromium, firefox, webkit
HEADLESS=              # true 或 false
DEFAULT_TIMEOUT=       # 超时时间(秒)
SLOW_MO=               # 操作延迟时间(毫秒)，用于调试

# ================================
# 3. Target System URLs
# ================================
WEB_BASE_URL=          # 例如: http://test.example.com
API_BASE_URL=          # 例如: http://test.example.com/api/

# ================================
# 4. Test Environment Credentials & Payment
# ================================
# 测试环境用户凭据
TEST_DEFAULT_USERNAME=
TEST_DEFAULT_PASSWORD=
TEST_ADMIN_USERNAME=
TEST_ADMIN_PASSWORD=
# 测试环境支付 API 配置
PAYMENT_API_KEY=
PAYMENT_MCH_ID=
PAYMENT_DEVICE_INFO=

# ================================
# 5. Production Environment Credentials & Payment
# ================================
# 生产环境用户凭据 (仅在 APP_ENV=prod 时使用)
PROD_DEFAULT_USERNAME=
PROD_DEFAULT_PASSWORD=
PROD_ADMIN_USERNAME=
PROD_ADMIN_PASSWORD=
# 生产环境支付配置 (仅在 APP_ENV=prod 时使用)
PROD_PAYMENT_API_KEY=
PROD_MCH_ID=
PROD_DEVICE_INFO=

# ================================
# 6. Email Configuration
# ================================
# 邮件通知开关（true启用，false关闭，推荐CI/CD环境设为true，本地开发可设为false）
EMAIL_ENABLED=
EMAIL_SMTP_SERVER=     # 例如: smtp.example.com
EMAIL_SMTP_PORT=       # 例如: 465 (SSL) 或 587 (TLS)
EMAIL_USE_SSL=         # true 或 false，是否使用SSL加密
EMAIL_SENDER=          # 发件人邮箱地址
EMAIL_PASSWORD=        # 邮箱密码或应用专用密码
EMAIL_RECIPIENTS=      # 例如: team@example.com,dev@example.com，多个收件人用逗号分隔

# ================================
# 7. Logging Configuration
# ================================
LOG_LEVEL=             # DEBUG, INFO, WARNING, ERROR 之一
LOG_FILE_ENABLED=      # true 或 false
LOG_CONSOLE_ENABLED=   # true 或 false
LOG_FILE_PATH=         # 日志文件目录

# ================================
# 8. Path Configuration
# ================================
# 截图存放目录（原始/调试用）
SCREENSHOT_DIR=
# 报告归档截图目录
REPORT_SCREENSHOT_DIR=
# 本地自定义Allure路径（如需本地生成Allure报告，Windows示例）
ALLURE_CMD=