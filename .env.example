# 指定运行环境 (例如: test, prod)
APP_ENV=test

# 目标系统基础 URL (请在你的本地 .env 文件或运行环境中设置实际值)
# 例如: http://test.example.com 或 https://prod.example.com
WEB_BASE_URL=
API_BASE_URL=

# 测试环境用户凭据 (请在你的本地 .env 文件或运行环境中设置实际值)
TEST_DEFAULT_USERNAME=
TEST_DEFAULT_PASSWORD=
TEST_ADMIN_USERNAME=
TEST_ADMIN_PASSWORD=

# 生产环境用户凭据 (仅在 APP_ENV=prod 时使用)
PROD_DEFAULT_USERNAME=
PROD_DEFAULT_PASSWORD=
PROD_ADMIN_USERNAME=
PROD_ADMIN_PASSWORD=

# 浏览器配置 (可在环境配置文件中设置默认值)
# BROWSER=               # 例如: chromium, firefox, webkit
# HEADLESS=              # true 或 false
# DEFAULT_TIMEOUT=       # 超时时间(秒)
# SLOW_MO=               # 操作延迟时间(毫秒)，用于调试

# 邮件配置 (可选，请在你的本地 .env 文件或运行环境中设置实际值)
EMAIL_ENABLED=           # true 或 false
EMAIL_SMTP_SERVER=       # 例如: smtp.example.com
EMAIL_SMTP_PORT=         # 例如: 465 (SSL) 或 587 (TLS)
EMAIL_SENDER=            # 发件人邮箱地址
EMAIL_PASSWORD=          # 邮箱密码或应用专用密码
EMAIL_USE_SSL=           # true 或 false

# POP3配置 (可选)
EMAIL_POP3_SERVER=       # 例如: pop.example.com
EMAIL_POP3_PORT=         # 例如: 995 (SSL)
EMAIL_POP3_USE_SSL=      # true 或 false

# 收件人设置 (可选，如需添加多个收件人，用逗号分隔)
EMAIL_RECIPIENTS=        # 例如: team@example.com

# 日志配置
LOG_LEVEL=               # DEBUG, INFO, WARNING, ERROR 之一
LOG_FILE_ENABLED=        # true 或 false
LOG_CONSOLE_ENABLED=     # true 或 false

# 特定功能配置 (例如验证码，根据需要设置)
# TEST_CAPTCHA_VALUE=